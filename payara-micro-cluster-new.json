{
  "jpsType": "install",
  "application": {
    "name": "Payara Micro Cluster",
    "homepage": "http://jelastic.com/",
    "description": "Autoscalable and Highly Available Payara Micro Cluster",
    "env": {
      "topology": {
        "nodes": [
          {
            "nodeType": "docker",
            "cloudlets": 16,
            "count": 2,
            "nodeGroup": "cp",
            "displayName": "PayaraCluster",
            "docker": {
              "image": "jelastic/payara",
              "env": {
                "PORT": "5080",
                "HAZELCAST_USER": "DONT_BE_DUPE_CHANGE_ME",
                "HAZELCAST_PASSWORD": "DONT_BE_DUPE_CHANGE_ME"
              }
            }
          }
        ]
      },
      "onAfterScaleOut[nodeGroup:cp]": {
        "call": [
          "updateClusterMembers"
        ]
      },
      "onAfterScaleIn[nodeGroup:cp]": {
        "forEach(event.response.nodes)": {
          "execCmd": {
            "nodeGroup": "cp",
            "commands": [
              "sed -i '/${@i.intIP}'/d' /opt/hazelcast.xml",
              "echo REMOVED ${@i.intIP >> /home/1.txt"
            ]
          }
        }
      }
    },
    "onInstall": {
        "call": [
          "updateClusterMembers"
        ]
      },
    "procedures": [
      {
        "id": "updateClusterMembers",
        "onCall": {
          "forEach(nodes.cp)": {
            "executeShellCommands": {
              "nodeId" : "${@i.id}",
              "commands": [
                "grep -q ${@i.intIP} /opt/hazelcast.xml || sed -i '/<member-list/a  <member>${@i.intIP}</member>' /opt/hazelcast.xml",
                "echo ADEED ${@i.intIP >> /home/1.txt"
              ],
              "user": "root"
            }
          }
        }
      }    ]
  }
}
